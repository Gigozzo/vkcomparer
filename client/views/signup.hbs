    <div class="container">

      <form action='/signup' method='post' class="form-signin" role="form">
        <h2 class="form-signin-heading">Please sign up</h2>
        
        <input name='username' type="text" class="form-control" placeholder="User name" required="" autofocus="">
        
        <input name='password' type="password" class="form-control" placeholder="Password" required="">
        
        <input name='password_confirmation' type="password" class="form-control" placeholder="Password (confirmation)" required="">
        
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
      </form>

    </div> <!-- /container -->